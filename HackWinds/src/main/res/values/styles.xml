<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Styles for individual views go here -->
    <style name="HeaderText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DataText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="forcDataText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DescripText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="tideDescripText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

    <style name="DataHeaderText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
</resources>