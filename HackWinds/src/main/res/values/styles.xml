<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Styles for individual views go here -->
    <style name="HeaderText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DataText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="forcDataText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DescripText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="tideDescripText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

    <style name="DataHeaderText">
        <item name="android:textColor">@color/numixGrey</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Generator theme -->
    <style name="Theme.Hackwind_holo" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_hackwind_holo</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Hackwind_holo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Hackwind_holo</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Hackwind_holo</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Hackwind_holo</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Hackwind_holo</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_hackwind_holo</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_hackwind_holo</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Hackwind_holo</item>
    </style>

    <style name="ActionBar.Solid.Hackwind_holo" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_hackwind_holo</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_hackwind_holo</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_hackwind_holo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Hackwind_holo</item>
    </style>

    <style name="ActionBar.Transparent.Hackwind_holo" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_hackwind_holo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Hackwind_holo</item>
    </style>

    <style name="PopupMenu.Hackwind_holo" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hackwind_holo</item> 
    </style>

    <style name="DropDownListView.Hackwind_holo" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_hackwind_holo</item>
    </style>

    <style name="ActionBarTabStyle.Hackwind_holo" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_hackwind_holo</item>
    </style>

    <style name="DropDownNav.Hackwind_holo" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_hackwind_holo</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hackwind_holo</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_hackwind_holo</item>
    </style>
    
    <style name="ProgressBar.Hackwind_holo" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_hackwind_holo</item>
    </style>
    
    <style name="ActionButton.CloseMode.Hackwind_holo" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_hackwind_holo</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Hackwind_holo.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Hackwind_holo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Hackwind_holo</item>
    </style>

</resources>