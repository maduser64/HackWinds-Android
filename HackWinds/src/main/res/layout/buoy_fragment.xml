<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/segmentedBuoyGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/buoy_summary_mode_segment_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/summary_mode_segment_title"
            android:layout_weight="1"
            style="@style/RadioButton" />

        <RadioButton
            android:id="@+id/buoy_swell_mode_segment_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/swell_mode_segment_title"
            style="@style/RadioButton" />

        <RadioButton
            android:id="@+id/buoy_wind_mode_segment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wind_mode_segment_title"
            style="@style/RadioButton"/>

    </info.hoang8f.android.segmented.SegmentedGroup>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="@color/light_grey" />

</LinearLayout>