<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/card_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemHeader"
            android:layout_gravity="left|center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/HeaderText"
            android:layout_weight="1" />

        <View android:id="@+id/separator" 
            android:background="@color/ltgrey" 
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:layout_marginBottom="7dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/breakThumb"
                android:layout_gravity="left|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_weight="3"
                android:src="@drawable/arrow_up"/>

            <TextView
                android:id="@+id/breakData"
                android:layout_gravity="left|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/DataText"
                android:text="Data Here"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/windThumb"
                android:layout_gravity="left|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_weight="3"
                android:src="@drawable/arrow_up"/>

            <TextView
                android:id="@+id/windData"
                android:layout_gravity="left|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/DataText"
                android:text="Data Here"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/swellThumb"
                android:layout_gravity="left|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_weight="3"
                android:src="@drawable/arrow_up"/>

            <TextView
                android:id="@+id/swellData"
                android:layout_gravity="left|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/DataText"
                android:text="Data Here"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tideThumb"
                android:layout_gravity="left|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_weight="3"
                android:src="@drawable/arrow_up"/>

            <TextView
                android:id="@+id/tideData"
                android:layout_gravity="left|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/DataText"
                android:text="Data Here"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>